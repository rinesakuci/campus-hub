generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  fullName String
  email String @unique
  password String
  role String @default("student")
  createdAt DateTime @default(now())
  tokens RefreshToken[]
}


model RefreshToken {
  id Int @id @default(autoincrement())
  tokenHash String
  userId Int
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  replacedByToken String?
  @@index([userId])
}

model Course {
  id          Int           @id @default(autoincrement())
  name        String
  code        String        @unique
  description String?
  events      Event[]
  assignments Assignment[]
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  location    String?
  course      Course?   @relation(fields: [courseId], references: [id])
  courseId    Int?
}

model Assignment {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueAt       DateTime
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    Int
}
