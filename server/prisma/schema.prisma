generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int           @id @default(autoincrement())
  name        String
  code        String        @unique
  description String?
  events      Event[]
  assignments Assignment[]
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  location    String?
  course      Course?   @relation(fields: [courseId], references: [id])
  courseId    Int?
}

model Assignment {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueAt       DateTime
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    Int
}
